{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"removeComments": false,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"outDir": "lib",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"baseUrl": "./",
		"rootDir": ".",
		"jsx": "react",
		"jsxFragmentFactory": "React.Fragment",
		"jsxFactory": "React.createElement",
		"allowJs": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types",
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"#/*": [
				"./types/*"
			],
		},
		"noUncheckedIndexedAccess": true,
	},
	"include": [
		"mock/**/*",
		"src/**/*",
		"playwright.config.ts",
		"tests/**/*",
		"test/**/*",
		"__test__/**/*",
		"config/**/*",
		".eslintrc.js",
		".stylelint.config.js",
		".prettierrc.js",
		"jest.config.js",
		"mock/*",
		"windi.config.ts",
		"types/**/*.d.ts",
		"types/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"scripts",
		"src/.umi/*",
		"webpack",
		"jest"
	],
	"compileOnSave": false
}
